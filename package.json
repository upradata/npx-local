{
	"name": "@upradata/npx-local",
	"version": "3.4.7",
	"description": "Npm/Pnpm/Yarn Local Packages Install",
	"main": "lib",
	"types": "lib",
	"module": "lib",
	"files": [
		"lib",
		"make-bin"
	],
	"bin": "bin/npx-local",
	"scripts": {
		"postinstall": "make-bin",
		"clean": "shx rm -rf lib lib-esm",
		"pre-build": "pnpm run clean",
		"build": "concurrently 'tsc -p tsconfig.lib.json' 'tsc -p tsconfig.lib-esm.json'",
		"post-build": "pnpm run test && npm run e2e",
		"watch": "pnpm run build:watch",
		"build:watch": "concurrently 'tsc -p tsconfig.lib.json -w' 'tsc -p tsconfig.lib-esm.json -w'",
		"test": "pnpm jest --passWithNoTests --verbose false --config jest-ut.config.js",
		"e2e": "pnpm jest --passWithNoTests --verbose false --config jest-e2e.config.js",
		"github-push": "npm version patch && git pushall && git pushall-tags",
		"npm-publish": "pnpm run build && npm publish --access public",
		"renamer": "renamer -regex --find '\\.js$' --replace '.mjs' './lib-esm/**/*.js'"
	},
	"author": "Thomas Milotti <thomas.milotti@gmail.com> (https://github.com/milottit)",
	"license": "MIT",
	"dependencies": {
		"fs-extra": "^10.0.0",
		"node-watch": "^0.7.1",
		"@upradata/util": "^11.2.3",
		"@upradata/node-util": "^13.0.0",
		"@upradata/dependency-injection": "^2.0.2"
	},
	"devDependencies": {
		"@types/yargs": "^17.0.0",
		"@schemastore/package": "0.0.6",
		"@types/fs-extra": "^9.0.11",
		"@types/jest": "^26.0.23",
		"@types/node": "^15.9.0",
		"concurrently": "^6.2.0",
		"jest": "^27.0.4",
		"jest-expect-message": "^1.0.2",
		"shx": "^0.3.3",
		"ts-jest": "^27.0.2",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.2"
	},
	"local": {
		"dependencies": {
			"@upradata/util": "link:/home/milottit/Libraries/Upra-Data/util@11.2.3",
			"@upradata/node-util": "link:/home/milottit/Libraries/Upra-Data/node-util@13.0.0",
			"@upradata/dependency-injection": "link:/home/milottit/Libraries/Upra-Data/dependency-injection@2.0.2"
		}
	}
}
