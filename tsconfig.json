{
    "compilerOptions": {
        "target": "ESNext",
        "outDir": "lib",
        "lib": [
            "ESNext"
        ],
        "module": "CommonJS",
        "resolveJsonModule": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "traceResolution": false,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "importHelpers": true
    },
    "include": [
        "./src",
    ]
}
